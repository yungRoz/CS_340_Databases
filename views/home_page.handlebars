<form id="addToCompany" align="left">
  <fieldset>
    <h2> Add someone to your company! </h2>
    <br/>
    <label>Which company do you want to add them to?</label>
    <br/>
    <select name="company" id="addCompany">
      {{#if results}}
        {{#each results}}
          {{#if this.coId}}
          <option value={{this.coId}}> {{this.coName}}</option>
          {{/if}}
        {{/each}}
      {{/if}}
    </select>
    <br />
    <label>Who do you want to add?</label>
    <br/>
    <select name="person" id="addPerson">
    {{#if results}}
      {{#each results}}
        {{#if this.notUId}}
        <option value={{this.notUId}}> {{this.notUName}}</option>
        {{/if}}
      {{/each}}
    {{/if}}
    </select>
    <input type="submit" id="addPersonToCompany" />
  </fieldset>
</form>



